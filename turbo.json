{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "globalEnv": [
    "PORT",
    "NODE_ENV",
    "JWT_SECRET",
    "JWT_EXPIRES_IN",
    "DATABASE_URL",
    "SENTRY_DSN",
    "SUPABASE_URL",
    "SUPABASE_KEY",
    "SUPABASE_STORAGE_BUCKET",
    "UPLOAD_DIR"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
